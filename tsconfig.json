{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution":"Node",
    "rootDir": "src",
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ],
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ]
}